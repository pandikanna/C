#include <stdio.h>
int main()
{
    int year;

    printf("\n Enter the Year :");
    scanf("%d",&year);
    if(year%100==0)
    {
       if(year%4==0)
         {
            printf("%d is leap year",year);
         }
        else
         {
            printf("%d is not leap year",year);
         }
    }
    else{
        if(year%4==0)
            {
              printf("%d is leap year",year);
            }
        else
            {
              printf("%d is not leap year",year);
            }
    }
        return 0;
}


output

 Enter the Year :2000
2000 is leap year
